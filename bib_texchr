#!/usr/bin/perl

use warnings;
use strict;

use Encode qw/encode decode/;
use utf8;

sub chSign($);
sub chBar($);
sub chAcute($);
sub chUml($);
sub chCedil($);
sub chGrave($);

foreach(<>){
				my $InputLine = decode('UTF-8',$_);
				chBar($InputLine);
				chAcute($InputLine);
				chGrave($InputLine);
				chUml($InputLine);
				chCedil($InputLine);
				chSign($InputLine);
				print encode('UTF-8',$InputLine);
}

sub chSign($) {
				$_[0] =~ s/¡/{!`}/g;	$_[0] =~ s/¿/{?`}/g;
				$_[0] =~ s/ø/{\\o}/g; $_[0] =~ s/Ø/{\\O}/g;
				$_[0] =~ s/ñ/{\\~n}/g; $_[0] =~ s/Ñ/{\\~N}/g;
				$_[0] =~ s/¢/{}/g;	$_[0] =~ s/\$/{\\\$}/g;
				$_[0] =~ s/€/{}/g;	$_[0] =~ s/%/{\\%}/g;
				$_[0] =~ s/ß/{\\ss}/g;
}

sub chBar($) {
				$_[0] =~ s/ā/{\\=a}/g;	$_[0] =~ s/ē/{\\=e}/g;
				$_[0] =~ s/ū/{\\=u}/g;	$_[0] =~ s/ī/{\\=i}/g;
				$_[0] =~ s/ō/{\\=o}/g;	$_[0] =~ s/Ā/{\\=A}/g;
				$_[0] =~ s/Ē/{\\=E}/g;	$_[0] =~ s/Ū/{\\=U}/g;
				$_[0] =~ s/Ī/{\\=I}/g;	$_[0] =~ s/Ō/{\\=O}/g;	
}
sub chAcute($) {
				$_[0] =~ s/á/{\\'a}/g;	$_[0] =~ s/é/{\\'e}/g;
				$_[0] =~ s/ú/{\\'u}/g;	$_[0] =~ s/í/{\\'i}/g;
				$_[0] =~ s/ó/{\\'o}/g;	$_[0] =~ s/Á/{\\'A}/g;
				$_[0] =~ s/É/{\\'E}/g;	$_[0] =~ s/Ú/{\\'U}/g;
				$_[0] =~ s/Í/{\\'I}/g;	$_[0] =~ s/Ó/{\\'O}/g;	

				$_[0] =~ s/ć/{\\'c}/g;	$_[0] =~ s/Ć/{\\'C}/g;	
				$_[0] =~ s/ĺ/{\\'l}/g;	$_[0] =~ s/Ĺ/{\\'L}/g;	
				$_[0] =~ s/ń/{\\'n}/g;	$_[0] =~ s/Ń/{\\'N}/g;	
				$_[0] =~ s/ŕ/{\\'r}/g;	$_[0] =~ s/Ŕ/{\\'R}/g;	
				$_[0] =~ s/ś/{\\'s}/g;	$_[0] =~ s/Ś/{\\'S}/g;	
				$_[0] =~ s/ú/{\\'u}/g;	$_[0] =~ s/Ú/{\\'U}/g;	
				$_[0] =~ s/ý/{\\'y}/g;	$_[0] =~ s/Ý/{\\'Y}/g;	
				$_[0] =~ s/ź/{\\'z}/g;	$_[0] =~ s/Ź/{\\'Z}/g;	
}
sub chUml($) {
				$_[0] =~ s/ä/{\\"a}/g;	$_[0] =~ s/ë/{\\"e}/g;
				$_[0] =~ s/ü/{\\"u}/g;	$_[0] =~ s/ï/{\\"i}/g;
				$_[0] =~ s/ö/{\\"o}/g;	$_[0] =~ s/Ä/{\\"A}/g;
				$_[0] =~ s/Ë/{\\"E}/g;	$_[0] =~ s/Ü/{\\"U}/g;
				$_[0] =~ s/Ï/{\\"I}/g;	$_[0] =~ s/Ö/{\\"O}/g;	
}
sub chCedil($) {
				$_[0] =~ s/ą/{\\c{a}}/g;	$_[0] =~ s/Ą/{\\c{A}}/g;
				$_[0] =~ s/ç/{\\c{c}}/g;	$_[0] =~ s/Ç/{\\c{C}}/g;
				$_[0] =~ s/ę/{\\c{e}}/g;	$_[0] =~ s/Ę/{\\c{E}}/g;
				$_[0] =~ s/ģ/{\\c{g}}/g;	$_[0] =~ s/Ģ/{\\c{G}}/g;
				$_[0] =~ s/į/{\\c{i}}/g;	$_[0] =~ s/Į/{\\c{I}}/g;
				$_[0] =~ s/ķ/{\\c{k}}/g;	$_[0] =~ s/Ķ/{\\c{K}}/g;
				$_[0] =~ s/ļ/{\\c{l}}/g;	$_[0] =~ s/Ļ/{\\c{C}}/g;
				$_[0] =~ s/ņ/{\\c{n}}/g;	$_[0] =~ s/Ņ/{\\c{C}}/g;
				$_[0] =~ s/ŗ/{\\c{r}}/g;	$_[0] =~ s/Ŗ/{\\c{C}}/g;
				$_[0] =~ s/ş/{\\c{s}}/g;	$_[0] =~ s/Ş/{\\c{C}}/g;
				$_[0] =~ s/ţ/{\\c{t}}/g;	$_[0] =~ s/Ţ/{\\c{C}}/g;
				$_[0] =~ s/ų/{\\c{u}}/g;	$_[0] =~ s/Ų/{\\c{C}}/g;
}
sub chGrave($) {
				$_[0] =~ s/à/{\\`a}/g;	$_[0] =~ s/è/{\\`e}/g;
				$_[0] =~ s/ù/{\\`u}/g;	$_[0] =~ s/Ì/{\\`i}/g;
				$_[0] =~ s/ò/{\\`o}/g;	$_[0] =~ s/À/{\\`A}/g;
				$_[0] =~ s/È/{\\`E}/g;	$_[0] =~ s/Ū/{\\`U}/g;
				$_[0] =~ s/Ì/{\\`I}/g;	$_[0] =~ s/Ù/{\\`O}/g;	
}
